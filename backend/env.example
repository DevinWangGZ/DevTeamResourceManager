# DevTeam Manager 环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 应用配置
APP_NAME=DevTeam Manager API
API_V1_STR=/api/v1
DEBUG=True

# 数据库类型: mysql, postgresql, sqlite
DATABASE_TYPE=mysql

# MySQL配置（当前使用）
MYSQL_SERVER=10.254.68.77
MYSQL_USER=root
MYSQL_PASSWORD=123456
MYSQL_DB=devteam_manager
MYSQL_PORT=3306

# PostgreSQL配置（备用）
POSTGRES_SERVER=localhost
POSTGRES_USER=devteam
POSTGRES_PASSWORD=devteam123
POSTGRES_DB=devteam_manager
POSTGRES_PORT=5432

# 直接指定数据库URL（可选，优先级最高）
# DATABASE_URL=mysql+pymysql://root:123456@10.254.68.77:3306/devteam_manager?charset=utf8mb4

# SQLite配置（开发环境，当USE_SQLITE=True时使用）
SQLITE_DB=devteam_manager.db
USE_SQLITE=False

# JWT配置
SECRET_KEY=your-secret-key-change-in-production-min-32-chars-please-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Redis配置（可选）
# REDIS_URL=redis://localhost:6379/0

# CORS配置
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
